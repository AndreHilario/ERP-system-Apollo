{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "seed": "prisma db seed",
    "start": "node dist/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node ./src/server.ts",
    "build": "tsc -p tsconfig.build.json",
    "migration:generate": "npm run dev:load-envs prisma migrate dev",
    "migration:run": "prisma migrate deploy",
    "dev:load-envs": "dotenv -e .env.development",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests --runInBand",
    "test:migration:run": "npm run test:load-envs prisma migrate deploy",
    "test:migration:generate": "npm run test:load-envs prisma migrate dev",
    "test:watch": "jest --watch --passWithNoTests --runInBand",
    "test:load-envs": "dotenv -e .env.test",
    "test:coverage": "jest --coverage --runInBand"
  },
  "keywords": [],
  "author": "André Hilário",
  "license": "ISC",
  "prisma": {
    "seed": "npm run dev:load-envs -- ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.4.2",
    "axios": "^1.5.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-expand": "^10.0.0",
    "express": "^4.18.2",
    "http-status": "^1.7.3",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "cross-env": "^7.0.3",
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.0.1",
    "prisma": "^5.4.2",
    "prisma-cli": "^1.0.9",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-transform-paths": "^3.4.6"
  }
}